<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbScreenLoggerDetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/screen_log_toolbar_height"

        android:gravity="center_vertical"
        android:minHeight="@dimen/screen_log_toolbar_height"
        android:paddingLeft="@dimen/general_small_margin_10dp"
        android:paddingRight="@dimen/general_small_margin_10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_small_margin_10dp"
            android:textColor="@color/white" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tvScreenLoggerDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tbScreenLoggerDetails"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/general_small_margin_10dp"
        android:layout_marginRight="@dimen/general_small_margin_10dp"
        android:scrollbars="vertical"
        android:textColor="@color/white"
        android:enabled="true"
        android:textIsSelectable="true"
        android:focusable="true"
        android:longClickable="true"/>

</RelativeLayout>